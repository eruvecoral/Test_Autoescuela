<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activityes.Graficos.Activity_menus_graficos">

    <TextView
        android:id="@+id/TV_Secciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SECCIONES"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="16dp" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="572dp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="67dp">

        <TableRow
            android:id="@+id/TR_Secciones"
            android:layout_width="match_parent"
            android:layout_height="294dp"
            android:layout_marginTop="-40dp"
            android:layout_weight="1"
            android:gravity="center">>

            <ImageButton
                android:id="@+id/IB_Secciones"
                android:layout_width="245dp"
                android:layout_height="245dp"
                android:layout_marginTop="15dp"
                android:contentDescription="@string/SECCIONES"
                app:srcCompat="@drawable/grafico_secciones" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">>

            <ImageButton
                android:id="@+id/IB_Temas"
                android:layout_width="245dp"
                android:layout_height="245dp"
                android:contentDescription="@string/TEMAS"
                app:srcCompat="@drawable/grafico_temas" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/TV_Temas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TEMAS"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_Secciones" />

</androidx.constraintlayout.widget.ConstraintLayout>